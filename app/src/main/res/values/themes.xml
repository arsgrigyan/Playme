<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Playme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>

        <!-- Customize your theme here. -->

        <!-- <item name="android:windowDrawsSystemBarBackgrounds">true</item>
         <item name="android:statusBarColor">@android:color/transparent</item>
         <item name="android:navigationBarColor">@android:color/transparent</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>


    </style>


    <style name="BottomNavigationBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemIconSize">26dp</item>
        <item name="textSize">18sp</item>
        <item name="itemTextColor">@color/bottom_nav_view_text_color</item>
        <item name="iconGravity">textTop</item>
        <item name="itemIconPadding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_bottom_nav_view</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextStyleInactive</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextStyleActive</item>

    </style>

    <style name="BottomNavigationViewTextStyleActive">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="BottomNavigationViewTextStyleInactive">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="ColorPrimaryWhite" parent="Theme.Playme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="musicPlaySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#B4FFFFFF</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>


</resources>